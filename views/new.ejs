<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/form.css">

    <title>New Game</title>
</head>

<body>
    <h1>Create Game</h1>
    <section>
        <%- include("partials/errors.ejs") %>
            <form method="POST" action="/new">
                <fieldset>
                    <legend>Game Info:</legend>
                    <label for="game_title">Game Title:</label>
                    <input type="text" id="game_title" name="game_title" required placeholder="enter game title">
                    <label for="img_src">Image Src:</label>
                    <input type="text" id="img_src" name="img_src" required placeholder="enter image url">
                </fieldset>
                <fieldset class="genre-fieldset">
                    <legend>Game Genres</legend>

                    <p>Select from existing categories:</p>
                    <div class="checkbox-group">
                        <% genres.forEach((genre)=> { %>
                            <label>
                                <input type="checkbox" name="genreIds" value="<%= genre.id %>">
                                <%= genre.genre %>
                            </label>
                            <% }) %>
                    </div>

                    <div class="new-input-container">
                        <label for="new-genre">Add a new genre (optional):</label>
                        <input type="text" name="newGenreName" id="new-genre" placeholder="e.g. Roguelike">
                    </div>
                </fieldset>

                <fieldset class="devs-fieldset">
                    <legend>Developers</legend>

                    <p>Select existing developers:</p>
                    <div class="checkbox-group">
                        <% devs.forEach((dev)=> { %>
                            <label>
                                <input type="checkbox" name="devIds" value="<%= dev.id %>">
                                <%= dev.name %>
                            </label>
                            <% }) %>
                    </div>

                    <div class="new-input-container">


                        <label id="new-dev-label" for="new-dev-first">Add a new developer (optional):</label>
                        <div>
                            <input type="text" name="newDevFirst" id="new-dev-first" placeholder="First Name">
                            <input type="text" name="newDevLast" id="new-dev-last" placeholder="Last Name">
                        </div>
                    </div>
                </fieldset>
                <button type="submit">Create</button>
            </form>


    </section>
</body>

</html>